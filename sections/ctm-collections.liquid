
  <div class="title-style">{{ section.settings.title }}</div>
  <div class="collection-items">
    {% for block in section.blocks %}
      {% assign collection1 = block.settings.collection_1 %}
      {% assign collection2 = block.settings.collection_2 %}
      <div class="row" {{ block.shopify_attributes }}>
        {% if collection1 %}
          <a href="{{ collection1.url }}" class="{% if block.settings.layout == "ls" %}item-4{% else %}item-5{% endif %}">
            <div class="tag-4">
              <div class="title-style-14">{{ collection1.title }}</div>
            </div>
            {% if collection1.featured_image %}
              <img 
                src="{{ collection1.featured_image | image_url: width: 800 }}" 
                alt="{{ collection1.title }}"
                class="image-4"
                loading="lazy"
                width="400"
                height="300"
              >
            {% else %}
              <div class="image-4" style="background: #f5f5f5; height: 300px;"></div>
            {% endif %}
          </a>
        {% endif %}
        {% if collection2 %}
          <a href="{{ collection2.url }}" class="{% if block.settings.layout == "ls" %}item-5{% else %}item-4{% endif %}">
            <div class="tag-4">
              <div class="title-style-14">{{ collection2.title }}</div>
            </div>
            {% if collection2.featured_image %}
              <img 
                src="{{ collection2.featured_image | image_url: width: 800 }}" 
                alt="{{ collection2.title }}"
                class="image-4"
                loading="lazy"
                width="400"
                height="300"
              >
            {% else %}
              <div class="image-4" style="background: #f5f5f5; height: 300px;"></div>
            {% endif %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>

{% schema %}
{
  "name": "Collections",
  "tag": "section",
  "class": "collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Explore Our Curated Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection_row",
      "name": "Collection Row",
      "limit": 2,
      "settings": [
        {
          "type": "collection",
          "label": "First Collection",
          "id": "collection_1"
        },
        {
          "type": "collection",
          "label": "Second Collection",
          "id": "collection_2"
        },
        {
          "type": "radio",
          "label": "Layout",
          "id": "layout",
          "options": [
            {
              "value": "ls",
              "label": "Large-Small"
            },
            {
              "value": "sl",
              "label": "Small-Large"
            }
          ],
          "default": "ls"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections",
      "category": "Featured",
      "blocks": [
        {
          "type": "collection_row"
        }
      ]
    }
  ]
}
{% endschema %}