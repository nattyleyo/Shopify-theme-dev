{% assign collection = collections[section.settings.collection] %}

{% if collection != blank %}
{% comment %} <section class="top-selling">
  <div class="color-box">
    <div class="title-style">{{ section.settings.section_title }}</div>
    <a href="{{ collection.url }}" class="label-style-5">{{ section.settings.view_all_text }}</a>
  </div>

  <div class="cate-list">
    <div class="list-2">
      {% for product in collection.products limit: section.settings.products_limit %}
        <div class="pr-card">
          <div class="img-box">
            {% if product.tags contains 'NEW' %}
              <div class="tag">
                <div class="label-style-6">NEW!</div>
              </div>
            {% elsif product.tags contains 'Best Seller' %}
              <div class="tag-2">
                <div class="label-style-7">Best Seller</div>
              </div>
            {% elsif product.tags contains 'Pre-Order' %}
              <div class="tag-3">
                <div class="label-style-6">Pre-Order</div>
              </div>
            {% endif %}

            <img
              src="{{ product.featured_image | img_url: 'medium' }}"
              alt="{{ product.title }}"
              class="product-img"
              loading="lazy"
              width="260"
              height="230"
            />
          </div>

          <div class="content-box">
            <div class="review-box">
              <!-- Placeholder for review stars (replace with review app) -->
              {% comment %} <img
                src="{{ 'rating-stars.svg' | asset_url }}"
                width="auto"
                height="auto"
                alt="Rating"
                class="frame-10"
                loading="lazy"
              /> {% endcomment %}
              <div class="title-style-4">
                {{ product.metafields.reviews.count | default: '13' }} Reviews
              </div>
            </div>

            <div class="color-box">
              <div class="title-style-5">Color</div>
              <div class="frame-144">
                {% assign variant_colors = product.options_with_values | where: "name", "Color" %}
                {% for value in variant_colors[0].values %}
                  <div class="frame-158">
                    <div class="dot-{{ forloop.index }}"></div>
                  </div>
                {% endfor %}
              </div>
            </div>

            <div class="pr-title">{{ product.title }}</div>
            <div class="price">
              <div class="text-2">{{ product.price | money }}</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  {% comment %} <div class="scroll-overlay">
    <div class="dot">
      <img
        src="{{ '' | asset_url }}"
        alt="Scroll"
        class="frame-style"
        width="24"
        height="24"
        loading="lazy"
      />
    </div>
  </div> {% endcomment %}
</section> {% endcomment %}
