{% assign product_features = product.metafields.custom.features.value %}

{% if product_features %}
  {% for feature in product_features %}
    {% assign mod_result = forloop.index0 | modulo: 2 %}
    {% if mod_result == 0 %}
      {% assign layout = 'image-content' %}
    {% else %}
      {% assign layout = 'content-image' %}
    {% endif %}

    <div id="features-{{ forloop.index }}" class="f-row {% if layout == 'content-image' %}content-first{% else %}image-first{% endif %}">
      {% if layout == 'content-image' %}
        <div class="detaills" >
          <div class="card-content-2">
            <div class="headline-16">
              {{ feature.title.value | default: feature.title }}
            </div>
            <div class="subtext-8">
              {{ feature.description.value | default: feature.description }}
            </div>
          </div>
        </div>
        <div class="card-f-2" id="features">
          {% if feature.image.value != blank %}
            {{ feature.image.value | img_url: 'large' | img_tag: feature.title.value, 'feature-image' }}
          {% elsif feature.image != blank %}
            {{ feature.image | img_url: 'large' | img_tag: feature.title, 'feature-image' }}
          {% endif %}
        </div>
      {% else %}
        <div class="card-f-2">
          {% if feature.image.value != blank %}
            {{ feature.image.value | img_url: 'large' | img_tag: feature.title.value, 'feature-image' }}
          {% elsif feature.image != blank %}
            {{ feature.image | img_url: 'large' | img_tag: feature.title, 'feature-image' }}
          {% endif %}
        </div>
        <div class="detaills">
          <div class="card-content-2">
            <div class="headline-16">
              {{ feature.title.value | default: feature.title }}
            </div>
            <div class="subtext-8">
              {{ feature.description.value | default: feature.description }}
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
{% else %}
  {% comment %} Default features when none exist in metafields {% endcomment %}
  <div id="features-default" class="f-row image-first">
    <div class="card-f-2">
      {{ 'product-1' | placeholder_svg_tag: 'feature-image' }}
    </div>
    <div class="detaills">
      <div class="card-content-2">
        <div class="headline-16">
          Premium Materials
        </div>
        <div class="subtext-8">
          Crafted with high-quality, durable materials for long-lasting performance.
        </div>
      </div>
    </div>
  </div>
  
  <div id="features-default-2" class="f-row content-first">
    <div class="detaills">
      <div class="card-content-2">
        <div class="headline-16">
          Advanced Technology
        </div>
        <div class="subtext-8">
          Incorporating the latest innovations for superior functionality and user experience.
        </div>
      </div>
    </div>
    <div class="card-f-2">
      {{ 'product-2' | placeholder_svg_tag: 'feature-image' }}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Product Features",
  "tag": "section",
  "class": "features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Product Features"
    },
    {
      "type": "checkbox",
      "id": "show_section_heading",
      "label": "Show section heading",
      "default": true
    },
    {
      "type": "select",
      "id": "layout_direction",
      "label": "Layout direction",
      "options": [
        {
          "value": "image-content",
          "label": "Image first"
        },
        {
          "value": "content-image",
          "label": "Content first"
        }
      ],
      "default": "image-content"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Feature description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "block_layout",
          "label": "Block layout",
          "options": [
            {
              "value": "default",
              "label": "Default"
            },
            {
              "value": "content-image",
              "label": "Content first"
            }
          ],
          "default": "default"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Features",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Premium Materials",
            "description": "Crafted with high-quality, durable materials for long-lasting performance.",
            "block_layout": "default"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Advanced Technology",
            "description": "Incorporating the latest innovations for superior functionality and user experience.",
            "block_layout": "content-image"
          }
        }
      ]
    }
  ]
}
{% endschema %}